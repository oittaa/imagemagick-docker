# top-most EditorConfig file
root = true
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_style = space
indent_size = 2
